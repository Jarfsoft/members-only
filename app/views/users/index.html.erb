

<h1 class="header">Members Only Users</h1>

<% if signed_in? %>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
    <h2>You need to be signed in to see the list of users.</h2>
<% end %>


<%= link_to 'Sign in', new_user_session_url %>
<%= link_to "Sign Up", new_user_path %>
